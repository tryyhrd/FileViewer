<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDocumentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00. ГОСТ Р 57723-2017"
                android:textColor="#232B38"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvGostTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Информационные технологии. Системы образовательные электронные"
                android:textColor="#232B38"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvGostDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Общие положения для электронных образовательных систем"
                android:textColor="#666666"
                android:textSize="12sp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow"
            android:layout_gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#232B38"
        android:layout_marginTop="8dp"
        android:alpha="0.6"/>

</LinearLayout>